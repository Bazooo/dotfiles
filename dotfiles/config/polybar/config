[colors]
;background = ${xrdb:color0}
;background = #222
background = ${env:POLYBAR_BGCOLOR:#00000000}
;background-alt = ${xrdb:color1}
background-alt = #00444420
;foreground = ${xrdb:color7}
;foreground-alt = ${xrdb:color7}
foreground = #dadfe1
foreground-alt = #dadfe1
primary = #ecf0f1
secondary = #e60053
alert = #d7005f

fgleft = ${env:POLYBAR_FGLEFT:#eee}
fgcenter = ${env:POLYBAR_FGCENTER:#eee}
fgright = ${env:POLYBAR_FGRIGHT:#eee}

[bar/bazoo]
width = 100%
height = 27
radius = 0.0
fixed-center = true
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

bottom = false

font-0 = Ubuntu Nerd Font:fontformat=truetype:size=10:antialias=true;0
font-1 = Material Icons:fontformat=truetype:size10:antialias=true;1
font-2 = Weather Icons:fontformat=truetype:size11:antialias=true;1

modules-left = i3
modules-center = xwindow
modules-right = eth wlan alsa xkeyboard temperature battery date

tray-position = right
tray-padding = 0

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
format-foreground = ${colors.fgcenter}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

;format-prefix = " "
;format-prefix-foreground = ${colors.foreground-alt}
;format-prefix-underline = ${colors.secondary}

label-layout = %layout%
label-layout-foreground = ${colors.fgright}
;label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-foreground = ${colors.fgright}
;label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.fgcenter}

[module/i3]
type = internal/i3
strip-wsnumbers = true
format = <label-state> <label-mode>
format-foreground = ${colors.fgleft}
# index-sort = true
# wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 3
label-mode-foreground = #000
label-mode-background = ${colors.fgleft}

; focused = Active workspace on focused monitor
label-focused = %index% [ %name% ]
label-focused-background = ${colors.background}
label-focused-underline = ${colors.fgleft}
label-focused-padding = ${self.label-mode-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index% [ %name% ]
label-unfocused-padding = ${self.label-mode-padding}

; visible = Active workspace on unfocused monitor
label-visible = %index% [ %name% ] 
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-mode-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index% [ %name% ]
label-urgent-background = ${colors.background}
label-urgent-underline = #fed330
label-urgent-padding = ${self.label-mode-padding}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight

format = <ramp>



[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.fgcenter}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.fgcenter}
format-underline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
format-connected-foreground = ${colors.fgright}
label-connected = %essid%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 =
ramp-signal-1 =
ramp-signal-2 =
ramp-signal-3 =
ramp-signal-4 =
ramp-signal-foreground = ${colors.fgright}
ramp-signal-font = 4

[module/eth]
type = internal/network
interface = enp2s0
interval = 3.0

; format-connected-underline = #55aa55
; format-connected-prefix = 
format-connected-prefix-foreground = ${colors.fgright}
label-connected = 
label-connected-font = 3
label-connected-foreground = ${colors.fgright}

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5
format-foreground = ${colors.fgright}

date =
date-alt = "%A, %B %d %Y"

time = %I:%M %p
time-alt = %I:%M %p

format-prefix =
format-prefix-foreground = ${colors.fgright}
;format-underline = #0a6cf5

label = %date% %time%

[module/alsa]
type = internal/alsa

;format-volume = <label-volume> <bar-volume>
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%
label-volume-foreground = ${colors.fgright}

;format-muted-prefix = " "
format-muted-foreground = ${colors.fgright}
label-muted = 
# label-muted-font = 1

ramp-volume-0 =  
ramp-volume-1 =  
ramp-volume-2 =  
ramp-volume-foreground = ${colors.fgright}
# ramp-volume-font = 1

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

